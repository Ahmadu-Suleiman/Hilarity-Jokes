<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/curved_outline"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textSize="14sp"
            tools:text="1-12-2023" />

        <ImageView
            android:id="@+id/imageview_delete_joke"
            style="@style/IconStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:contentDescription="@string/save"
            android:src="@drawable/ic_delete"
            app:tint="@color/color_primary_variant" />

        <ImageView
            android:id="@+id/imageview_share_joke"
            style="@style/IconStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/share"
            android:src="@drawable/ic_share"
            app:tint="@color/color_primary_variant" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_joke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        android:minLines="4"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:textSize="16sp"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Beatae eius, eum expedita illum impedit itaque iusto nam natus necessitatibus, nesciunt quam, ratione veniam vitae! Ab aliquid commodi eos inventore ipsa iste necessitatibus nostrum, obcaecati odio quas recusandae saepe sit sunt tempore voluptas. Asperiores at earum enim ipsam numquam soluta temporibus?" />
</LinearLayout>